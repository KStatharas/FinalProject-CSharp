@page "{id:int}"
@model StudentTeacherApp.Pages.Admins.GetAdminModel

@{
    ViewData["Title"] = "Admin Details";
}

<h1>Admin Details</h1>

<div>
    <hr />
    <dl class="row">
        @if (User.IsInRole("Admin"))
        {
            <dt class="col-sm-2">
                Admin Id
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AdminDTO.Id)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AdminDTO.Firstname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdminDTO.Firstname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AdminDTO.Lastname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdminDTO.Lastname)
