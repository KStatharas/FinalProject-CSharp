@page
@model StudentTeacherApp.Pages.Admins.GetAdminsModel

@{
    ViewData["Title"] = "Admin Details";
}

<h1>Admins Details</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a class="btn btn-success mt-1 mb-3 waves-effect" asp-page="/Account/Register">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            @if (User.IsInRole("Admin"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.AdminDTO[0].Id)
                </th>
            }
            <th>
               Full Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdminDTO[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AdminDTO)
        {
        <tr>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-page="./UpdateAdmin" asp-route-id="@item.Id" class="btn btn-info m-0 waves-effect">Edit</a>
                    <a asp-page="./GetAdmin" asp-route-id="@item.Id" class="btn btn-info m-0 waves-effect">Details</a>
                    <a asp-page="./DeleteAdmin" asp-route-id="@item.Id" class="btn btn-info m-0 waves-effect">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
