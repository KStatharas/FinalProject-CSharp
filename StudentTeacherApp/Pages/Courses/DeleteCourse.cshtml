@page "{id:int}"
@model DeleteCourseModel

@{
    ViewData["Title"] = "Delete Course";
}

<h1>Delete Course</h1>

<h3>Are you sure you want to delete this Course</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseDTO.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseDTO.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseDTO.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseDTO.Description)
        </dd>
        <dt class="col-sm-2">
            Teacher's Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseDTO.TeacherId)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="CourseDTO.Id" />
        <input type="submit" value="Delete" class="btn btn-danger mt-5 mb-2"/>
        <br />
        <a asp-page="./GetCourses">Back to List</a>
    </form>
</div>
