@page "{id:int}"
@model StudentTeacherApp.Pages.Courses.GetCourseModel

@{
    ViewData["Title"] = "Course Details";
}

<h1>Course Details</h1>

<div>
    <hr />
    <dl class="row">
        @if (User.IsInRole("Admin"))
        {
            <dt class="col-sm-2">
                Course Id
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseDTO.Id)
            </dd>
        }
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseDTO.Description)
        </dd>
        <dt class="col-sm-2">
            Teacher Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseDTO.TeacherId)
        </dd>
        <dt class="col-sm-2">
               Theacher First name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseDTO.FirstLast.Firstname)
        </dd>
        <dt class="col-sm-2">
            Theacher Last name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseDTO.FirstLast.Lastname)
        </dd>
    </dl>
</div>
<div>
    
    @if (!User.IsInRole("Student"))
    {
        <a asp-page="./UpdateCourse" asp-route-id="@Model.CourseDTO?.Id" class="btn btn-primary mt-5 mb-2">Edit</a>
    }
    <br />
    <a asp-page="./GetCourses">Back to List</a>
</div>
