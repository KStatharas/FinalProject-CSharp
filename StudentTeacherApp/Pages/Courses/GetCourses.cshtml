@page
@model StudentTeacherApp.Pages.Courses.GetCoursesModel

@{
    ViewData["Title"] = "GetCourses";
}

<h1>Courses Details</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].TeacherId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].TeacherId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Course) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherId)
            </td>
            <td>
                @if (!User.IsInRole("Student")){
                    <a asp-page="./UpdateCourse" asp-route-id="@item.Id">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                }
                <a asp-page="./GetCourse" asp-route-id="@item.Id">Details</a> 
                    @if (User.IsInRole("Student"))
                    { 
                        @if(Model.CourseHandler(Model.UserDTO.Id,item.Id)){
                            <a class="btn btn-danger" asp-page="./../Events/Leave" asp-route-id="@item.Id">Leave</a>
                        }
                        else{
                            <a class="btn btn-success" asp-page="./../Events/Enroll" asp-route-id="@item.Id">Enroll</a>
                        }
                    }
                  
            </td>
        </tr>
}
    </tbody>
</table>
