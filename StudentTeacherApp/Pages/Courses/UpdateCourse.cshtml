@page "{id:int}"
@model StudentTeacherApp.Pages.Courses.UpdateCourseModel

@{
    ViewData["Title"] = "Edit Course";
}

<h1>Edit Course</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseDTO.Description" class="control-label"></label>
                <input asp-for="CourseDTO.Description" class="form-control" />
                <span asp-validation-for="CourseDTO.Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="CourseDTO.TeacherId" class="control-label"></label>
                <select asp-for="CourseDTO.TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
                <span asp-validation-for="CourseDTO.TeacherId"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mt-5 mb-2"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./GetCourses">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
