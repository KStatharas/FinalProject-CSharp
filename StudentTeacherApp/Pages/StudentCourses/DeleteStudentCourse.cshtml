@page "{studentid:int},{courseid:int}"
@model DeleteStudentCourseModel

@{
    ViewData["Title"] = "Remove Student from Course";
}

<h1>Remove Student from Course</h1>

<h3>Are you sure you want to remove this Student from the Course?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Student Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentCourseDTO.StudentId)
        </dd>
        <dt class="col-sm-2">
            Teacher Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentCourseDTO.CourseId)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="StudentCourseDTO.StudentId" />
        <input type="submit" value="Remove" class="btn btn-danger mt-5 mb-2"/>
        <br />
        <a asp-page="./GetStudentCourses">Back to List</a>
    </form>
</div>
