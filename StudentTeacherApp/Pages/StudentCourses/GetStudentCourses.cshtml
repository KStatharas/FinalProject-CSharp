@page
@model GetStudentCoursesModel

@{
    ViewData["Title"] = "GetStudentCourses";
}

<h1>GStudent Courses' Details</h1>

<p>
    <a asp-page="./AddStudentCourse">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentCourseDTO[0].Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentCourseDTO[0].Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.StudentCourseDTO)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseId)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.StudentId" class="btn btn-outline-primary btn m-0 waves-effect">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.StudentId" class="btn btn-outline-primary btn m-0 waves-effect">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.StudentId" class="btn btn-outline-primary btn m-0 waves-effect">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
