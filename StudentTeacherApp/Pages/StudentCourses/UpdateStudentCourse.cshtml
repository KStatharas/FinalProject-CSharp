@page "{studentid:int},{courseid:int}"
@model UpdateStudentCourseModel

@{
    ViewData["Title"] = "Edit Student Course";
}

<h1>Edit Student Course</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentCourseDTO.CourseId" class="control-label"></label>
                <select asp-for="StudentCourseDTO.CourseId" class="form-control" asp-items="ViewBag.CourseId"> </select>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="StudentCourseDTO.StudentId" class="control-label"></label>
                <select asp-for="StudentCourseDTO.StudentId" class="form-control" asp-items="ViewBag.StudentId"> </select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" id="courseCreate" value="Save" class="btn btn-primary mt-5 mb-2"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./GetStudentCourses">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
