@page "{id:int}"
@model StudentTeacherApp.Pages.Students.GetStudentModel

@{
    ViewData["Title"] = "Student Details";
}

<h1>Student Details</h1>

<div>
    <hr />
    <dl class="row">
        @if (User.IsInRole("Admin"))
        {
            <dt class="col-sm-2">
                Id
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudentDTO.Id)
            </dd>
        }
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentDTO.Firstname)
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentDTO.Lastname)
        </dd>
    </dl>
</div>
<div>
    @if (!User.IsInRole("Student"))
    {
        <a asp-page="./UpdateStudent" asp-route-id="@Model.StudentDTO?.Id" class="btn btn-primary mt-5 mb-2">Edit</a>
    }
    <br />
    <a asp-page="./GetStudents">Back to List</a>
</div>
