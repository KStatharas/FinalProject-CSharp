@page 
@model StudentTeacherApp.Pages.Students.GetStudentsModel

@{
    ViewData["Title"] = "GetStudents";
}

<h1>GetStudents</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentDTO[0].Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentDTO[0].Lastname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.StudentDTO)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn m-0 waves-effect">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn m-0 waves-effect">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-primary btn m-0 waves-effect">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
