@page
@model StudentTeacherApp.Pages.Teacher.GetTeachersModel

@{
    ViewData["Title"] = "GetTeachers";
}

<h1>GetTeachers</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeacherDTO[0].Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherDTO[0].Lastname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TeacherDTO) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
