@page "{id:int}"
@model StudentTeacherApp.Pages.Teachers.GetTeacherModel

@{
    ViewData["Title"] = "Teacher Details";
}

<h1>Teacher Details</h1>

<div>
    <hr />
    <dl class="row">
        @if (User.IsInRole("Admin"))
        {
            <dt class="col-sm-2">
                Id
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TeacherDTO.Id)
            </dd>
        }
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TeacherDTO.Firstname)
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TeacherDTO.Lastname)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-page="./UpdateTeacher" asp-route-id="@Model.TeacherDTO?.Id" class="btn btn-primary mt-5 mb-2">Edit</a>
    }
    <br />
    <a asp-page="./GetTeachers">Back to List</a>
</div>
