@page
@model StudentTeacherApp.Pages.Teachers.GetTeachersModel

@{
    ViewData["Title"] = "GetTeachers";
}

<h1>GetTeachers</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeacherDTO[0].Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherDTO[0].Lastname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TeacherDTO)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                    <a asp-page="./UpdateTeacher" asp-route-id="@item.Id" class="btn btn-info btn m-0 waves-effect">Edit</a> |
                    <a asp-page="./GetTeacher" asp-route-id="@item.Id" class="btn btn-info btn m-0 waves-effect">Details</a>



                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-page="./DeleteTeacher" asp-route-id="@item.Id" class="btn btn-info btn m-0 waves-effect">Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
