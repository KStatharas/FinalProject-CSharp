@page
@model StudentTeacherApp.Pages.Teachers.GetTeachersModel

@{
    ViewData["Title"] = "Teachers";
}

<h1>Teachers</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a class="btn btn-success mt-1 mb-3 waves-effect" asp-page="/Account/Register">Create New</a>
    </p>
}
<table class="table table-striped table-hover">
    <thead>
        <tr>
            @if (User.IsInRole("Admin"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.TeacherDTO[0].Id)
                </th>
            }
            <th>
                Full Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TeacherDTO)
        {
        <tr>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                    <a asp-page="./GetTeacher" asp-route-id="@item.Id" class="btn btn-info btn m-0 waves-effect">Details</a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-page="./UpdateTeacher" asp-route-id="@item.Id" class="btn btn-info btn m-0 waves-effect">Edit</a>
                        <a asp-page="./DeleteTeacher" asp-route-id="@item.Id" class="btn btn-info btn m-0 waves-effect">Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
