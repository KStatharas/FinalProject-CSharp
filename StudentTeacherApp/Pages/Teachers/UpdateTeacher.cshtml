@page "{id:int}"
@model StudentTeacherApp.Pages.Teachers.UpdateTeacherModel

@{
    ViewData["Title"] = "Edit Teacher";
}

<h1>Edit Teacher</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TeacherDTO.Id" />
            <div class="form-group">
                <label asp-for="TeacherDTO.Firstname" class="control-label"></label>
                <input asp-for="TeacherDTO.Firstname" class="form-control" />
                <span asp-validation-for="TeacherDTO.Firstname" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="TeacherDTO.Lastname" class="control-label"></label>
                <input asp-for="TeacherDTO.Lastname" class="form-control" />
                <span asp-validation-for="TeacherDTO.Lastname" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mt-5 mb-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./GetTeachers">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
