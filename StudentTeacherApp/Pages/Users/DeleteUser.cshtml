@page "{id:int}"
@model StudentTeacherApp.Pages.Users.DeleteUserModel

@{
    ViewData["Title"] = "Delete User";
    string uid = User.Claims.FirstOrDefault(x => x.Type == "UserId").Value;
}

<h1>Delete User</h1>

<h3>Are you sure you want to delete this User?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDTO.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDTO.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDTO.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDTO.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDTO.Password)
        </dt>
        @if (Convert.ToString(Model.UserDTO.Id) == uid)
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserDTO.Password)
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                •••••••
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserDTO.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserDTO.Type)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="UserDTO.Id" />
        <input type="submit" value="Delete" class="btn btn-danger mt-5 mb-2"/>
        <br />
        <a asp-page="./GetUsers">Back to List</a>
    </form>
</div>
