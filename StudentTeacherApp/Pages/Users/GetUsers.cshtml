@page
@model StudentTeacherApp.Pages.Users.GetUsersModel

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p>
    <a asp-page="Account/Register">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Username)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.User[0].Password)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.User[0].FirstLast.Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].FirstLast.Lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.FirstLast.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstLast.Lastname)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                    <a asp-page="./UpdateUser" asp-route-id="@item.Id" class="btn btn-outline-primary btn m-0 waves-effect">Edit</a> |
                    <a asp-page="./GetUser" asp-route-id="@item.Id" class="btn btn-outline-primary btn m-0 waves-effect">Details</a> |
                    <a asp-page="./DeleteUser" asp-route-id="@item.Id" class="btn btn-outline-primary btn m-0 waves-effect">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
